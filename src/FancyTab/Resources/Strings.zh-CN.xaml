    <system:String x:Key="Menu_ExportPdf">导出PDF(_E)</system:String>
    <system:String x:Key="Menu_Exit">退出(_X)</system:String>

    <system:String x:Key="Menu_Edit">编辑(_E)</system:String>
    <system:String x:Key="Menu_Undo">撤销(_U)</system:String>
    <system:String x:Key="Menu_Redo">重做(_R)</system:String>
