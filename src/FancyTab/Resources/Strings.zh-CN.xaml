    <system:String x:Key="About_Title">关于 Fancy Tab</system:String>
    <system:String x:Key="About_Version">版本 1.0.0</system:String>
    <system:String x:Key="About_Description">简洁的吉他六线谱编辑器</system:String>

    <!-- 快捷键帮助 -->
    <system:String x:Key="Shortcuts_Title">键盘快捷键</system:String>
    <system:String x:Key="Shortcuts_Navigation">导航</system:String>
    <system:String x:Key="Shortcuts_ArrowKeys">方向键 - 移动光标</system:String>
    <system:String x:Key="Shortcuts_Numbers">0-9 - 输入品数</system:String>
    <system:String x:Key="Shortcuts_Delete">Delete - 删除音符</system:String>
    <system:String x:Key="Shortcuts_Techniques">技巧</system:String>
    <system:String x:Key="Shortcuts_H">H - 击弦</system:String>
    <system:String x:Key="Shortcuts_P">P - 勾弦</system:String>
    <system:String x:Key="Shortcuts_B">B - 推弦</system:String>
