                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <!-- 应用信息 -->
    <system:String x:Key="App_Title">Fancy Tab - 吉他六线谱编辑器</system:String>

    <!-- 菜单 -->
    <system:String x:Key="Menu_File">文件(_F)</system:String>
    <system:String x:Key="Menu_New">新建(_N)</system:String>
    <system:String x:Key="Menu_Open">打开(_O)</system:String>
    <system:String x:Key="Menu_Save">保存(_S)</system:String>
